{
  "name": "csharp-grammar-extended",
  "displayName": "C# Grammar Extended",
  "description": "Fixes some issues and adds some new features to VS Code's default C# grammar.",
  "version": "1.0.0",
  "author": "Danny McGee",
  "publisher": "dannymcgee",
  "license": "MIT",
  "engines": {
    "vscode": "*"
  },
  "contributes": {
    "grammars": [
      {
        "language": "csharp",
        "scopeName": "source.cs",
        "path": "./syntaxes/csharp.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "npx js-yaml src/csharp.tmLanguage.yml > syntaxes/csharp.tmLanguage.json",
    "watch": "npx yaml-watch ./src -o ./syntaxes",
    "dev": "npm run build && npm run watch"
  },
  "devDependencies": {
    "js-yaml": "^3.13.1",
    "yaml-watch": "^0.1.0"
  }
}
